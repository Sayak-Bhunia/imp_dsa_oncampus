for (size_t i = 0; i < rows; i++) {
      int rowSum = 0;
      for (size_t j = 0; j < cols; j++) rowSum += matrix[i][j];
      cout << "Sum of row " << i + 1 << ": " << rowSum << endl;
}

for (size_t j = 0; j < cols; j++) {
      int colSum = 0;
      for (size_t i = 0; i < rows; i++) colSum += matrix[i][j];
      cout << "Sum of column " << j + 1 << ": " << colSum << endl;
}

